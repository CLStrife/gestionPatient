@model IEnumerable<GestionPatientMVC.Models.Ordonnance>

@{
    ViewBag.Title = "Index";
}

<h2>Liste des ordonnance</h2>

<p>
    @Html.ActionLink("Créer une ordonnance", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.DatePrescription)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IdPatient)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.DatePrescription)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IdPatient)
        </td>
        <td>
            @Html.ActionLink("Modifier", "Edit", new { id = item.Id }) |
            @Html.ActionLink("Fiche", "Details", new { id = item.Id }) |
        </td>
    </tr>
}

</table>
